<%- include('partials/header1') %>

<div class="card" id="login_card">
  <div class="card-header">
    <h1 id="login_name">Register<h1>
  </div>
  <div class="card-body">
    <form id="loginForm" action="/controllers/register-controller" method="POST">
      <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input type="text" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">First Name</label>
        <input type="text" name="name" class="form-control" id="exampleInputName1" placeholder="First Name">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
      </div>
      <button type="submit" value="Submit" class="btn btn-primary btn-block">Submit</button>
    </form>
    <a href="/" text-align='center'>Have an Account? Login<a>
  </div>
</div>

<%- include('partials/footer') %>
