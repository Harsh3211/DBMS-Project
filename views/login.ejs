<%- include('partials/header1') %>


<div class="card" id="login_card">
  <div class="card-header">
    <h1 id="login_name">Login<h1>
  </div>
  <div class="card-body">
    <form id="loginForm" action="/controllers/authenticate-controller" method="POST">
      <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input type="text" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
      </div>
      <div class="form-group">
        <label for="paymentAmount">Current City</label>
        <select class="form-control" name="location">
          <option value="400004">Mumbai</option>
          <option value="411005">Pune</option>
          <option value="431001">Aurangabad</option>
          <option value="440001">Nagpur</option>
          <option value="445204">Pusad</option>
        </select>
      </div>
      <button type="submit" value="Submit" class="btn btn-primary btn-block">Submit</button>
    </form>

    <a href="/register" text-align='center'>No Account? Register<a>
  </div>
</div>

<%- include('partials/footer') %>
