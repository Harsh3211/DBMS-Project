<%- include('partials/header') %>




<style>
#login_name {
  text-align: center;
  font-size: 4rem;
  font-family: sans-serif;
}

#login_card {
  margin-left: 8rem;
  margin-right: 8rem;
  margin-top: 2rem;
  margin-bottom: 4rem;
  padding-left: 10rem;
  padding-right: 10rem;
  padding-top: 6rem;
  padding-bottom: 6rem;
}

#cards {
  display: inline-block;
  padding: 1rem;
  margin: 1rem;
}

#cardids {
  margin-left: auto;
  margin-right: auto;
}

</style>

<div class="card" id="login_card">
  <div class="card-header">
    <h1 id="login_name">Payment<h1>
  </div>
  <div class="card-body">
    <form id="loginForm" action="/payment" method="POST">
      <div class="form-group">
        <label for="paymentInput Type">Payment Type</label>
        <select class="form-control" name='payment_type'>
          <option value="Debit Card">Debit Card</option>
          <option value="Credit Card">Credit Card</option>
          <option value="Net Banking">Net Banking</option>
        </select>
      </div>
      <div class="form-group">
        <label for="paymentAmount">Payment Amount</label>
        <select class="form-control" name="payment_amount">
          <option value="<%=amount%>"><%=amount%></option>
        </select>
      </div>
      <button type="submit" value="Submit" class="btn btn-primary btn-block">Pay</button>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
